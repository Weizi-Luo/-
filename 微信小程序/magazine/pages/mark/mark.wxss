
.container{
    padding:0;
}
.user-container{
    box-sizing:border-box;
    display:flex;
    flex-direction:column;
    padding:0 30rpx;
    background-color:#fff;
    width:100%;
}
.user-info{
    display:flex;
    justify-content:space-between;
    margin-bottom:50rpx;
    width:100%;
}
.user-name{
    font-size:40rpx;

}
.user-avatar{
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    overflow:hidden;
}
.user-avatar image{
    width:100rpx;
    height:100rpx;
}
.share{
    width:50rpx;
    height:50rpx;
    margin-top:30rpx;
    margin-bottom:30rpx;
}
.share image{
    width:50rpx;
    height:50rpx;
    float:right;
}
.get-user-info{
    padding:0;
    border:0;
}